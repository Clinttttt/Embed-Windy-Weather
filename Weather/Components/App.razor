</head>

<body>
    <Routes />
    <script src="_framework/blazor.web.js"></script>

    <script>
        window.initMapClickListener = function (dotnetRef) {
            const iframe = document.getElementById('windy-iframe');
            if (!iframe) return;

   
            window.addEventListener('message', function (e) {
                if (e.data && e.data.lat && e.data.lon) {
                    dotnetRef.invokeMethodAsync('OnMapClicked', e.data.lat, e.data.lon);
                }
            });
        };
    </script>
</body>

